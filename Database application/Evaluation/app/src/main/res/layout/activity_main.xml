<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
android:layout_width="231dp"
android:layout_height="wrap_content"
android:layout_x="100dp"
android:layout_y="30dp"
android:text="Student Details"
android:textSize="30sp"
android:textStyle="bold" />
<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"

    android:layout_x="20dp"
    android:layout_y="120dp"
    android:textStyle="bold"
    android:text="Enter RRN:"
    android:textSize="20sp" />
<EditText
android:id="@+id/RRN"
android:hint = "enter RRN"
android:layout_width="150dp"
android:layout_height="wrap_content"
android:layout_x="175dp"
android:layout_y="100dp"
android:inputType="number"
android:textSize="20sp"
android:importantForAutofill="no"
tools:ignore="LabelFor" />
<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_x="20dp"
android:layout_y="170dp"
android:text="Enter Name:"
android:textSize="20sp"
android:textStyle="bold" />
<EditText
android:id="@+id/Name"
android:hint = "enter name"
android:layout_width="150dp"
android:layout_height="wrap_content"
android:layout_x="175dp"
android:layout_y="155dp"
android:inputType="text"
android:textSize="20sp"
android:importantForAutofill="no" />
<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_x="20dp"
android:layout_y="220dp"
android:textStyle="bold"
android:text="Enter CGPA:"
android:textSize="20sp" />
<EditText
android:id="@+id/CGPA"
android:hint = "enter cgpa"
android:layout_width="150dp"
android:layout_height="wrap_content"
android:layout_x="175dp"
android:layout_y="205dp"
android:inputType="number"
android:textSize="20sp"

    android:importantForAutofill="no"
    tools:ignore="LabelFor" />
<Button
android:id="@+id/Insert"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_x="30dp"
android:layout_y="305dp"
android:text="Insert"
android:textSize="30dp" />
<Button
android:id="@+id/Delete"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_x="29dp"
android:layout_y="410dp"
android:text="Delete"
android:textSize="30dp" />
<Button
android:id="@+id/Update"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_x="213dp"
android:layout_y="305dp"
android:text="Update"
android:textSize="30dp" />
<Button
android:id="@+id/View"
android:layout_width="139dp"
android:layout_height="wrap_content"
android:layout_x="213dp"
android:layout_y="410dp"
android:text="View"
android:textSize="30dp" />
<Button
android:id="@+id/ViewAll"
android:layout_width="200dp"
android:layout_height="wrap_content"
android:layout_x="100dp"
android:layout_y="510dp"
android:text="View All"
android:textSize="30dp" />
    </AbsoluteLayout>